```

1：题目基本信息
create table question(
q_id int,
q_typeid int,
q_content text,
q_result char,
q_datestr text,
primary key(q_id)
)

2:选项详情
create table q_options(

q_id int,//标志是哪一个题目！
a_opt text,
b_opt text,
c_opt text,
d_opt text,
primary key(q_id)
)


3：答案详情

create table q_result(
q_id int,
q_analysis text,
interpretation text,
primary key(q_id)
)


4:题目类型详情

create table q_type(
q_typeid int,
q_type varchar(128),
primary key(q_typeid)
)




